{#
/**
 * @file
 * Olivero theme implementation to display primary and secondary local tasks.
 *
 * Available variables:
 * - primary: HTML list items representing primary tasks.
 * - secondary: HTML list items representing secondary tasks.
 *
 * Each item in these variables (primary and secondary) can be individually
 * themed in menu-local-task.html.twig.
 *
 * @ingroup themeable
 */
#}
{% set classes = [
  'tabs',
  'usa-button-group',
  'usa-button-group--segmented',
] %}

{% if primary %}
  <nav role="navigation" class="tabs--wrapper" aria-label="{{ 'Primary tabs'|t }}">
    <ul{{ attributes.addClass(classes).addClass('tabs--primary') }}>
      {{ primary }}
    </ul>
  </nav>
{% endif %}

{% if secondary %}
  <nav role="navigation" class="tabs--wrapper" aria-label="{{ 'Secondary tabs'|t }}">
    <ul{{ attributes.addClass(classes).addClass('tabs--secondary') }}>
      {{ secondary }}
    </ul>
  </nav>
{% endif %}
