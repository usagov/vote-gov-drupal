{#
/**
 * @file
 * Vote.gov USWDS theme implementation for a page title.
 *
 * Available variables:
 * - title_attributes: HTML attributes for the page title element.
 * - title_prefix: Additional output populated by modules, intended to be
 *   displayed in front of the main title tag that appears in the template.
 * - title: The page title, for use in the actual content.
 * - title_suffix: Additional output populated by modules, intended to be
 *   displayed after the main title tag that appears in the template.
 */
#}
{% set components_path =  path('<current>') %}
{% if 'uswds-components' in components_path %}
  {% set title_class = 'text-white bg-primary padding-x-205 padding-y-2'  %}
{% endif %}

{% set classes = [
  title_class,
  'title',
  'page-title',
] %}

{{ title_prefix }}
{% if title|render|striptags|trim %}
 <h1{{ title_attributes.addClass('main-heading').setAttribute('data-test', 'main-header') }}>{{ title }}</h1>

{% endif %}
{{ title_suffix }}
