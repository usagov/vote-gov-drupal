{#
/**
 * @file
 * Default theme implementation to display a basic paragraph.
 *
 * @ingroup themeable
 */
#}
{% set classes = [
  content.field_classes | field_value | render
] %}

{% block paragraph %}
  <div{{ attributes.addClass(classes) }}>
    <div class="grid-container">
      <div class="grid-row grid-gap">
        <div class="tablet:grid-col-4">
        </div>
        <div class="tablet:grid-col-8 right-shift" data-test="main-content">
          <section class="page-section registered" aria-label="{{ content.field_heading | field_value }}">
            <header>
              <h2 class="content-heading">{{ content.field_heading | field_value }}</h2>
            </header>
            <div class="voter-resources">
              {{ content.field_body | field_value }}
            </div>
          </section>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
