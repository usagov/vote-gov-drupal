{#
/**
 * @file
 * Default theme implementation to USWDS collection component.
 *
 * USWDS template variables:
 * - collection_content: field object value
 * - classes: classes array
 *
 * Usage example:
 * {% include '@vote_gov/uswds/usa-collection.html.twig' with {
 *   'collection_content': var_collection_content | field_value,
 *   'classes': var_classes
 * } %}
 *
#}
{% set usa_classes = [
  'usa-collection',
  'component',
  'component--type--usa-collection',
] %}

<ul{{ attributes.addClass(usa_classes | merge(classes | default([]))).removeAttribute('role').setAttribute('role', 'list') }}>
  {% block content %}
    {{ collection_content }}
  {% endblock %}
</ul>
