{# USWDS Footer component partial file. #}

{# Set social icons, update as needed. #}
{% set social_icons = [
  {'social_alt':'Facebook Icon','icon':'facebook'},
  {'social_alt':'Instagram Icon','icon':'instagram'},
  {'social_alt':'Twitter Icon','icon':'twitter'},
  {'social_alt':'Youtube Icon','icon':'youtube'},
  {'social_alt':'RSS Icon','icon':'rss_feed'}
] %}

<div class="grid-container usa-footer__return-to-top">
  <a href="#">{{ 'Return to top'|t }}</a>
</div>

<div class="usa-footer__primary-section">
  {# Footer menu block. #}
  {{ drupal_entity('block', 'footer_menu') }}
</div>

<div class="usa-footer__secondary-section">
  <div class="grid-container-widescreen">
    <div class="grid-row grid-gap">
      <div class="usa-footer__logo grid-row mobile-lg:grid-col-6 mobile-lg:grid-gap-2">

        <div class="mobile-lg:grid-col-auto">
          <img class="usa-footer__logo-img" src="/{{ directory }}/{{ path_image }}/usa-icons/people.svg" alt=""
               width="50"
               height="50"/>
        </div>

        <div class="mobile-lg:grid-col-auto">
          <p class="usa-footer__logo-heading">
            <a class="usa-link" href="{{ base_url }}" title="{{ drupal_token('site:name') }}">
              {{ drupal_token('site:name') }}
            </a>
          </p>
        </div>
      </div>
      <div class="usa-footer__contact-links mobile-lg:grid-col-6">

        <div class="usa-footer__social-links grid-row grid-gap-1">
          {# Social icons loop. #}
          {% for item in social_icons %}
            <div class="grid-col-auto">
              <a class="usa-social-link" href="javascript:void(0);">
                <img
                  class="usa-social-link__icon"
                  src="/{{ directory }}{{ path_image }}/usa-icons/{{ item.icon }}.svg"
                  alt="{{ item.social_alt }}"
                  width="24"
                  height="24"/>
              </a>
            </div>
          {% endfor %}
        </div>

        <p class="usa-footer__contact-heading">
          {{ drupal_config('system.site', 'name') }} {{ 'Contact Center'|t }}
        </p>

        <address class="usa-footer__address">
          <div class="usa-footer__contact-info grid-row grid-gap">
            <div class="grid-col-auto">
              <a href="tel:1-800-555-5555">(800) 555-GOVT</a>
            </div>
            <div class="grid-col-auto">
              <a href="mailto:info@agency.gov">info@agency.gov</a>
            </div>
          </div>
        </address>
      </div>
    </div>
  </div>
</div>

