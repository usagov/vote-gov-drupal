{#
/**
 * @file
 * Default theme implementation to display a paragraph: Image + text CTA.
 */
#}

{# Caching the data in content object #}
{% set savedCache = content | render %}

<div{{ attributes.addClass(['vote-cta', 'vote-cta__media-' ~ content.field_image_alignment | field_value | render ]) }}>
  {# Hold these title_* placeholders for potential integration #}
  {{ title_prefix }}
  {{ title_suffix }}
  <div class="vote-cta__media-container tablet:grid-col-4 tablet-lg:grid-col-7 desktop-lg:grid-col-6">
    {{ content.field_media | field_value }}
  </div>
  <div class="vote-cta__content-container tablet:grid-col-7 tablet-lg:grid-col-5 desktop-lg:grid-col-6">
    <div class="vote-cta__header vote-heading--red-underline">
      <h2>{{ content.field_heading | field_value }}</h2>
    </div>
    {% if content.field_body | render %}
      <div class="vote-cta__body">
        {{ content.field_body | field_value }}
      </div>
    {% endif %}
    {% if content.field_link | render %}
      <p class="vote-cta__footer">
        <span class="vote-link">{{ content.field_link | field_value }}</span>
      </p>
    {% endif %}
  </div>
</div>
