{#
/**
 * @file
 * Default theme implementation to display a paragraph: Basic
 */
#}

{# Caching the data in content object #}
{% set savedCache = content | render %}

<section{{ attributes.addClass('vote-basic') }}>
  {# Hold these title_* placeholders for potential integration #}
  {{ title_prefix }}
  {{ title_suffix }}
  {% if content.field_heading | render %}
    <h2 class="vote-basic__heading vote-heading--red-underline vote-heading--max-width">
      {{ content.field_heading | field_value }}
    </h2>
  {% endif %}
  <div class="vote-basic__content">
    {{ content.field_body | field_value }}
  </div>
</section>
