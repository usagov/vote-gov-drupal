{#
/**
 * @file
 * Olivero theme implementation to display primary and secondary local tasks.
 *
 * Available variables:
 * - primary: HTML list items representing primary tasks.
 * - secondary: HTML list items representing secondary tasks.
 *
 * Each item in these variables (primary and secondary) can be individually
 * themed in menu-local-task.html.twig.
 *
 * @ingroup themeable
 */
#}

{% if primary %}
  <div class="grid-container">
    <div id="primary-tabs-title" class="usa-sr-only">{{ 'Primary tabs' | t }}</div>
    <nav role="navigation" class="tabs-wrapper" aria-labelledby="primary-tabs-title" data-drupal-nav-primary-tabs>
      <ul class="usa-button-group usa-button-group--segmented usa-button-group--segmented--flat">{{ primary }}</ul>
    </nav>
  </div>
{% endif %}

{% if secondary %}
  <div class="grid-container">
    <div id="secondary-tabs-title" class="usa-sr-only">{{ 'Secondary tabs' | t }}</div>
    <nav role="navigation" class="tabs-wrapper" aria-labelledby="secondary-tabs-title">
      <ul class="usa-button-group usa-button-group--segmented usa-button-group--segmented--flat">{{ secondary }}</ul>
    </nav>
  </div>
{% endif %}
