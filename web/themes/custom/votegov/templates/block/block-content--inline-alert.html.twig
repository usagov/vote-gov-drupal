{% set classes = [
  'usa-alert--warning'
] %}

{% include '@uswds_templates/usa-alert.html.twig' with {
  'alert_type': content.field_alert_type | render,
  'heading': content.field_heading | field_value,
  'heading_level': 'h4',
  'text': content.field_alert_content | field_value,
  'classes': classes
} %}
