{
  "name": "nvrf_app",
  "version": "1.0.0",
  "scripts": {
    "build": "npm run move:dist & npm run move:data",
    "move:dist": "rm -rf ./dist && cp -r ./node_modules/vote-gov-nvrf-app/dist ./dist",
    "move:data": "rm -rf ../../../data && cp -r ./node_modules/vote-gov-nvrf-app/dist/data ../../../data",
    "move:trussworks": "npm run trussworks:uswds & npm run trussworks:index",
    "trussworks:uswds": "cp -r ./node_modules/@trussworks/react-uswds/lib/uswds.css ./dist/theme/assets/styles",
    "trussworks:index": "cp -r ./node_modules/@trussworks/react-uswds/lib/index.css ./dist/theme/assets/styles"
  },
  "dependencies": {
    "vote-gov-nvrf-app": "github:usagov/vote-gov-nvrf-app#v0.14.0"
  }
}
